#define _POSIX_C_SOURCE 200809L

#include <stdio.h>
#include <stdlib.h>

int main(void) {
    char *line = NULL;
    size_t len = 0;

    printf("Please enter some text: ");
    ssize_t read = getline(&line, &len, stdin);

    if (read == -1) {
        perror("getline");
        free(line);
        return 1;
    }

    printf("%s", line);

    free(line);
    return 0;
}

